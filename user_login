## 用户登录

import pymysql
# 数据库链接信息
config = {
  'host':'localhost',
  'user':'root',
  'password':'123123',
  'database':'Mytest'
}

# 定义函数 users_login
def users_login(users_login_name,users_login_pass):
# 链接数据库
    db = pymysql.connect(**config)
# 创建游标对象 cursor
    cursur = db.cursor()
# sql语句
    sql = ('select * from user_login where name = %s;')
# 执行SQL语句
    cursur.execute(sql,users_login_name)
# 提交到数据库
    db.commit()
# 获取游标对象值
    logins = cursur.fetchall()
# 关闭游标对象
    cursur.close()
# 关闭数据库 
    db.close()
# 遍历数据库获取值
    for i in logins:
        id = i[0]
        name = i[1]
        password = i[2]
# 判断用户输入的用户名和数据库用户名是否相等
        if users_login_name == name:
# 判断用户输入密码和数据库密码是否相等
            if users_login_pass == password:
                print("欢迎您，登录成功！")
            else:
                print("密码错误！请重新输入！")
        else:
            print("用户名错误！")

users_login_name = input("请输入用户名：")
users_login_pass = input("请输入密码：")
users_login(users_login_name,users_login_pass) 

